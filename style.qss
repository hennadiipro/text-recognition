/* Set the font and background color of the application */
QWidget {
    font-family: Arial;
    background-color: #F5F5DC;
}

/* Style the buttons */
QPushButton {
    font-weight: bold;
    border: 1px solid black;
}

/* Change the button color on hover */
QPushButton:hover {
    background-color: #4682B4;
}

/* Style the text edit */
QTextEdit {
    background-color: white;
    font-size: 16px;
}

/* Style the image label */
QLabel {
    background-color: white;
}
